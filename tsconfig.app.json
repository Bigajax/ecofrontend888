{
  "compilerOptions": {
    /* Saída/alvo moderno */
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],

    /* Módulos/bundler */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,

    /* React 18 – JSX automático */
    "jsx": "react-jsx",

    /* Qualidade/ergonomia */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    /* Interop e import helpers */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,

    /* Paths/aliases (opcional) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Tipos globais necessários no editor */
    "types": ["react", "react-dom", "vite/client"]
  },
  "include": [
    "src",
    "src/utils/generatePrompt.ts",
    "server/services/openrouter.ts"
  ]
}
